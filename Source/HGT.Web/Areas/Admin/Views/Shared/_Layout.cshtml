<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title | DMC</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <!-- bootstrap 3.0.2 -->
    <link href="~/Areas/Admin/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- font Awesome -->
    <link href="~/Areas/Admin/Content/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Ionicons -->
    <link href="~/Areas/Admin/Content/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="~/Areas/Admin/Content/css/AdminLTE.css" rel="stylesheet" type="text/css" />
    <!-- Theme style custom -->
    <link href="~/Areas/Admin/Content/css/AdminLTE.custom.css" rel="stylesheet" type="text/css" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->

    @RenderSection("styles", required: false)
    <!-- jQuery -->
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>

    @Scripts.Render("~/bundles/kendo_script")

	<!-- Add mousewheel plugin (this is optional) 
	<script type="text/javascript" src="../lib/jquery.mousewheel-3.0.6.pack.js"></script>-->

	<!-- Add fancyBox main JS and CSS files -->
	<script type="text/javascript" src="~/plugins/fancybox/jquery.fancybox.js?v=2.1.5"></script>
	<link rel="stylesheet" type="text/css" href="~/plugins/fancybox/jquery.fancybox.css?v=2.1.5" media="screen" />

	<!-- Add Button helper (this is optional) -->
	<link rel="stylesheet" type="text/css" href="~/plugins/fancybox/helpers/jquery.fancybox-buttons.css?v=1.0.5" />
	<script type="text/javascript" src="~/plugins/fancybox/helpers/jquery.fancybox-buttons.js?v=1.0.5"></script>

	<!-- Add Thumbnail helper (this is optional) -->
	<link rel="stylesheet" type="text/css" href="~/plugins/fancybox/helpers/jquery.fancybox-thumbs.css?v=1.0.7" />
	<script type="text/javascript" src="~/plugins/fancybox/helpers/jquery.fancybox-thumbs.js?v=1.0.7"></script>

	<!-- Add Media helper (this is optional) -->
	<script type="text/javascript" src="~/plugins/fancybox/helpers/jquery.fancybox-media.js?v=1.0.6"></script>

     <!-- Add kendo styles -->    
    @Styles.Render("~/Content/kendo_css")

    <!-- Add news styles -->    
    @RenderSection("newStyles", required: false)
</head>
<body class="skin-blue">
    <header class="header">
        <a href="/" class="logo" target="_blank">DMC</a>
        @Html.Partial("_HeaderPartial")
    </header>
    <div class="wrapper row-offcanvas row-offcanvas-left">
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="left-side sidebar-offcanvas">
            <!-- sidebar: style can be found in sidebar.less -->
            @Html.Partial("_LeftPartial")
            <!-- /.sidebar -->
        </aside>

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">
            @RenderBody()
        </aside>
        <!-- /.right-side -->
    </div>
    <!-- ./wrapper -->

    <div id="divLoading" class="loading" style="display: none;"> </div>

    <!-- Message diglog windows-->
    <input type="hidden" id="confirmDialogTitleDefault" value="Information" />
    <input type="hidden" id="confirmDialogContentDefault" value="Do you want to delete this record?" />

    <script type="text/x-kendo-template" id="confirmationPublic">
         <div id="modal">                      
            <h4 class="txt-center"><span></span></h4>
            <div class="form-group txt-center box-Confirm" style="display: none;">
                <div class="btn-center">
                    <button class="btnConfirm btn btn-default" type="button"><i class="fa fa-check"></i> Yes</button>
                    <button class="btnCancel btn btn-default" type="button"><i class="fa  fa-exclamation-circle"></i> No</button>
                </div>
            </div>
            <div class="form-group txt-center box-Error" style="display: none;">
                @*<div class="form-group">
                    <p class="form-control-static MsgErr"></p>
                </div>*@
                <div class="btn-center">
                    <button class="btnCancelError btn btn-default" type="button"><i class="fa fa-check"></i>OK</button>
                </div>
            </div>

            <div class="form-group txt-center box-Success" style="display: none;">
                <div class="btn-center">
                    <button class="btnSuccess btn btn-default" type="button"><i class="fa fa-check"></i>OK</button>
                </section>
            </div>
        </div>
    </script>
    <!-- Bootstrap -->
    <script src="~/Areas/Admin/Content/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- AdminLTE App -->
    <script src="~/Areas/Admin/Content/js/AdminLTE/app.js" type="text/javascript"></script>

    <!-- jquery common -->
    <script src="~/Areas/Admin/Scripts/jquery.common.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
