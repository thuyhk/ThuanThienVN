@{
    ViewBag.Title = "Michi Mart";
}

@section header{
    <link href="@Url.Content("~/Themes/Default/Content/common.css")" rel="stylesheet" media="screen" />
}

@section slideBanner{
    @{Html.RenderAction("_BannerHomePage", "Home");}
    <div class="clear"></div>
}

@section colLeft{
    @{Html.RenderAction("_ListCategories", "Category");}
}

@{Html.RenderAction("_ListProductsShowIndex", "Category");}

@section footer{
    <script src="@Url.Content("~/Scripts/jquery.iosslider.min.js")"></script>    
    <script src="@Url.Content("~/Scripts/slideBanner.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.easing.1.3.js")"></script>
    <script src="@Url.Content("~/Scripts/owl.carousel.js")"></script>
    <script>
        $(document).ready(function () {
            var owl = $("#owl1");
            owl.owlCarousel({
                items: 4, //10 items above 1000px browser width
                itemsDesktop: [995, 3], //5 items between 1000px and 901px
                itemsDesktopSmall: [767, 2], // betweem 900px and 601px
                itemsTablet: [700, 2], //2 items between 600 and 0
                itemsMobile: [400, 1], // itemsMobile disabled - inherit from itemsTablet option
                navigation: true,
            });
        });
    </script>
}